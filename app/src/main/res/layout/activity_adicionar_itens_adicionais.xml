<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AdicionarItensAdicionaisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWindowBackground">
            <ImageView
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:transitionName="logotipoScreen"
                android:padding="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_pizzaria" />
            <ImageButton
                android:onClick="onBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/branco"
                android:src="@drawable/ic_action_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/adicionar_item"
                    android:onClick="onAdicionarItemCardapio"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/branco"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_action_adicionar"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/ordenar_blocos"
                    android:onClick="onOrdenarBlocos"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:layout_height="48dp"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:textColor="@color/branco"
                    android:text="@string/ordenar"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
          </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:background="@color/light_grey_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textColor="@color/preto"
                        android:fontFamily="@font/gotham"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/displayName"/>
                    <TextView
                        android:textSize="6pt"
                        android:textColor="@color/grey_60"
                        android:fontFamily="@font/gill_sans_mt"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_itens_cardapio"/>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/on_config"
                    android:onClick="onConfig"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/acriligo_tint_laranja"
                    android:src="@drawable/ic_action_settings"
                    android:background="@drawable/btn_acriligo_laranja"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/listaLayout">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:onClick="onCancelarItens"
                        android:background="@drawable/btn_acriligo_vermelho_quadrado"
                        android:text="@string/cancelar"
                        android:textColor="@color/acriligo_tint_vermelho"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>
                    <Button
                        android:onClick="onConfirmarItens"
                        android:id="@+id/btn_confirnar"
                        android:visibility="gone"
                        android:background="@drawable/btn_acriligo_verde_quadrado"
                        android:text="@string/confirmar"
                        android:textColor="@color/acriligo_tint_verde"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_centerInParent="true"
                android:id="@+id/vazio"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/lista_vazia"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gill_sans_mt"
                    android:text="@string/sem_itens"/>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_sheet"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>