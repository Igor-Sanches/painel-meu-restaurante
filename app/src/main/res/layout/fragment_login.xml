<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:background="@color/colorWindowBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teste"
        android:textColor="@color/light_grey_100"
        android:layout_margin="10dp"
        android:alpha="0.05"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:layout_gravity="bottom|start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:layout_marginTop="50dp"
                    android:src="@drawable/logo_pizzaria"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:id="@+id/layout_principal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailUser"
                        app:errorEnabled="false"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:hintEnabled="false"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:drawableStart="@drawable/ic_action_email"
                            android:drawablePadding="10dp"
                            app:drawableTint="@color/preto"
                            android:textColor="@color/preto"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:hint="@string/email"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_editor"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/senhaUser"
                        app:errorEnabled="false"
                        android:drawableStart="@drawable/ic_action_senha"
                        app:drawableTint="@color/preto"
                        android:textColor="@color/preto"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/bg_editor"
                            android:drawableStart="@drawable/ic_action_senha"
                            android:drawablePadding="10dp"
                            app:drawableTint="@color/preto"
                            android:textColor="@color/preto"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:hint="@string/senha"
                            android:singleLine="true"
                            android:inputType="textVisiblePassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">
                        <FrameLayout
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/btnRegister"
                            android:background="@drawable/bg_button_style_iniciar"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorStroke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nova_conta"/>
                        </FrameLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/btnLogin"
                            android:background="@drawable/bg_button_style_iniciar"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorStroke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/entrar"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_action_zap"
                android:background="@drawable/btn_acriligo_login_circular"
                android:tint="@color/branco"/>
            <ImageButton
                android:layout_marginStart="10dp"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/ic_action_telefone"
                android:background="@drawable/btn_acriligo_login_circular"
                android:tint="@color/branco"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_sheet"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>