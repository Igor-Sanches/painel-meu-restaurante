<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/layout"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_marginLeft="10dp"
    android:gravity="start"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
           <LinearLayout
               android:gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <View
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:background="@color/colorAccentGrey"/>

               <View
                   android:layout_width="10dp"
                   android:layout_height="10dp"
                   android:background="@drawable/circular_icon"/>
               <View
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:background="@color/colorAccentGrey"/>
           </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:fontFamily="@font/gotham"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/data"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_action_conta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_notification"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/colorAccentGrey"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayName"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_action_dinheiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/colorAccentGrey"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayValorTotal"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_action_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_checked"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/colorAccentGrey"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displaySistuacao"
                android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>