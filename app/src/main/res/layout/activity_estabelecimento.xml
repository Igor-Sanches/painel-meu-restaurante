<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EstabelecimentoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWindowBackground">
            <ImageView
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:transitionName="logotipoScreen"
                android:padding="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_pizzaria" />
            <ImageButton
                android:onClick="onBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/branco"
                android:src="@drawable/ic_action_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/lyt_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <app.birdsoft.painelmeurestaurante.widget.ViewLoadingDotsFade
                    android:background="@color/colorWindowBackground"
                    android:layout_width="50dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_wifi_error"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wifi_offline"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/carrinho_erro_conexao"/>
                <Button
                    android:onClick="onUpdateConnection"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_style_iniciar"
                    android:text="@string/tente_novamente"/>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/listaLayout">
                      <androidx.cardview.widget.CardView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                          <TextView
                              android:layout_margin="10dp"
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/summary_config"/>
                      </androidx.cardview.widget.CardView>
                      <LinearLayout
                          android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_distancia_max"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                          <Button
                              android:text="@string/adicionar"
                              android:textAllCaps="false"
                              android:id="@+id/config_distancia_max"
                              android:onClick="onConfigDistanciaMax"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout
                          android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_taxas_entregas"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                          <Button
                              android:text="@string/selecionar"
                              android:onClick="onTaxaSelector"
                              android:textAllCaps="false"
                              android:id="@+id/btn_taxa"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout
                          android:id="@+id/layout_taxa_fixa" android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/light_grey_100" android:visibility="gone" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_taxa_fixa"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                          <Button
                              android:text="R$ 0,00"
                              android:textAllCaps="false"
                              android:id="@+id/config_taxas_entregas"
                              android:onClick="onTaxaFixa"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout
                          android:id="@+id/layout_taxa_km" android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/light_grey_100" android:visibility="gone" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_taxa_quilometros"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                          <Button
                              android:text="R$ 0,00/Km"
                              android:textAllCaps="false"
                              android:onClick="onTaxaKm"
                              android:id="@+id/config_taxa_quilometros"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout
                          android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_telefone"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                          <Button
                              android:id="@+id/btn_telefone"
                              android:onClick="onTelefone"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAllCaps="false"
                              android:text="@string/adicionar"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout
                          android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_whasapp"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                          <Button
                              android:id="@+id/btn_zap"
                              android:onClick="onWhatsApp"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAllCaps="false"
                              android:text="@string/adicionar"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout
                          android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_email"
