                                    android:id="@+id/bool_semana_dom"
                                    android:layout_width="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="?actionBarSize">
                            <TextView
                                android:fontFamily="@font/gill_sans_mt"
                                android:layout_marginStart="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/seg"
                                android:textAlignment="center"/>
                            <View
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:id="@+id/layout_semana_seg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <Button
                                    android:visibility="gone"
                                    android:id="@+id/btn_semana_seg"
                                    android:textColor="@color/colorBtnAzul"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="@string/adicionar"
                                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/bool_semana_seg"
                                    android:layout_width="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="?actionBarSize">
                            <TextView
                                android:fontFamily="@font/gill_sans_mt"
                                android:layout_marginStart="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ter"
                                android:textAlignment="center"/>
                            <View
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:id="@+id/layout_semana_ter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <Button
                                    android:visibility="gone"
                                    android:id="@+id/btn_semana_ter"
                                    android:textColor="@color/colorBtnAzul"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="@string/adicionar"
                                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/bool_semana_ter"
                                    android:layout_width="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="?actionBarSize">
                            <TextView
                                android:fontFamily="@font/gill_sans_mt"
                                android:layout_marginStart="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
