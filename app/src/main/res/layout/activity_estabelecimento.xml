                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                          <Button
                              android:id="@+id/btn_endereco"
                              android:onClick="onEndereco"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAllCaps="false"
                              android:text="@string/adicionar"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout
                          android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/geolocalizacao"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                          <Button
                              android:id="@+id/btn_geopoint"
                              android:onClick="onGeolocalizacao"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAllCaps="false"
                              android:text="@string/adicionar"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                      <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_prazo_entrega"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                          <Button
                              android:id="@+id/btn_prazo_default"
                              android:onClick="onPrazo"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                              android:textAllCaps="false"
                              android:text="@string/selecionar"/>
                      </LinearLayout>
                      <LinearLayout
                          android:id="@+id/layout_prazo" android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/light_grey_100" android:visibility="gone" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
                          <TextView
                              android:fontFamily="@font/gill_sans_mt"
                              android:layout_marginStart="10dp"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/config_prazo_fixo_title"
                              android:textAlignment="center"/>
                          <View
                              android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                          <Button
                              android:text="@string/adicionar"
                              android:textAllCaps="false"
                              android:id="@+id/config_prazo_entregas"
                              android:onClick="onPrazoFixo"
                              android:textColor="@color/colorBtnAzul"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                      </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="?attr/actionBarSize">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/gill_sans_mt"
                            android:layout_marginStart="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hararios"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_margin="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:fontFamily="@font/gotham"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/config_horario_config"/>
                        <LinearLayout
                            android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="?actionBarSize" android:minHeight="?actionBarSize">
                            <TextView
                                android:fontFamily="@font/gill_sans_mt"
                                android:layout_marginStart="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dom"
                                android:textAlignment="center"/>
                            <View
                                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:id="@+id/layout_semana_dom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <Button
                                    android:visibility="gone"
                                    android:id="@+id/btn_semana_dom"
                                    android:textColor="@color/colorBtnAzul"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="@string/adicionar"
                                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
