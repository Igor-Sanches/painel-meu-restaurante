<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AtualizarCardapioUnicoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWindowBackground">
            <ImageView
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:transitionName="logotipoScreen"
                android:padding="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_pizzaria" />
            <ImageButton
                android:onClick="onBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/branco"
                android:src="@drawable/ic_action_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layout_principal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="6dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/summary_cardapio"/>

                            <LinearLayout
                                android:layout_marginTop="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/capa_produto"
                                    android:layout_width="200dp"
                                    android:layout_height="110dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/image_add_ft"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <Button
                                        android:onClick="onBuscarImagem"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/btn_acriligo_laranja"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:text="@string/buscar"
                                        android:textAllCaps="false"
                                        android:textColor="@color/acriligo_tint_laranja"/>

                                    <TextView
                                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:text="@string/summary_imageAdd"/>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cardapio_titulo_name"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/input_name"
                                app:errorEnabled="false"
                                app:hintEnabled="false"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:drawablePadding="10dp"
                                    app:drawableTint="@color/preto"
                                    android:textColor="@color/preto"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="12dp"
                                    android:layout_gravity="center"
                                    android:paddingBottom="12dp"
                                    android:hint="@string/name_exemple"
                                    android:singleLine="true"
                                    android:inputType="textCapSentences"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_editor"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/input_receita"
                                android:layout_marginTop="10dp"
                                app:errorEnabled="false"
                                app:hintEnabled="false"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:drawablePadding="10dp"
                                    app:drawableTint="@color/preto"
                                    android:textColor="@color/preto"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="12dp"
                                    android:layout_gravity="center"
                                    android:paddingBottom="12dp"
                                    android:hint="@string/receita_exemple"
                                    android:singleLine="true"
                                    android:inputType="textCapSentences"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_editor"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/op_cardapio_unico_valor"/>
                            <FrameLayout
                                android:onClick="onValorProduto"
                                android:focusable="true"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@drawable/bg_editor_troco">
                                <TextView
                                    android:id="@+id/valor_produto"
                                    android:drawableStart="@drawable/ic_action_dinheiro"
                                    android:drawablePadding="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="R$ 0,00"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                            </FrameLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/painel"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/lanche_disponivel"
                            android:text="@string/lanche_disponivel"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <Button
                            android:onClick="onCancelar"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:text="@string/cancelar"
                            android:background="@drawable/btn_acriligo_vermelho"
                            android:textColor="@color/acriligo_tint_vermelho"
                            android:textAllCaps="false"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <Button
                            android:onClick="onAtualizar"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:text="@string/atualizar"
                            android:background="@drawable/btn_acriligo_verde"
                            android:textColor="@color/acriligo_tint_verde"
                            android:textAllCaps="false"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <app.birdsoft.painelmeurestaurante.widget.ViewLoadingDotsFade
            android:background="@color/colorWindowBackground"
            android:layout_width="50dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_wifi_error"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wifi_offline"/>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/carrinho_erro_conexao"/>
        <Button
            android:onClick="onUpdateConnection"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_style_iniciar"
            android:text="@string/tente_novamente"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/vazio"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lista_vazia"/>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gill_sans_mt"
            android:text="@string/sem_lanches_indisponivel"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>