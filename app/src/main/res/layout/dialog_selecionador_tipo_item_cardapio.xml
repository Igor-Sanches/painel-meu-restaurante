<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey_100"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:fontFamily="@font/gill_sans_mt"
                            android:text="@string/config_item_cardapio"
                            app:drawableStartCompat="@drawable/ic_action_settings" />
                    </androidx.appcompat.widget.Toolbar>

                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            app:hintEnabled="false"
                            android:id="@+id/blockName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:maxLength="32"
                                android:inputType="textCapSentences"
                                android:fontFamily="@font/gill_sans_mt"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/preto"
                                android:hint="@string/name_bloco_item"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="10dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/obgdSelected"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gill_sans_mt"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/selecao_obgtr"
                            android:checked="true" />
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/quantidade"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gill_sans_mt"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quantidade_disponivel"
                            android:checked="false" />
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/valorMaior"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gill_sans_mt"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/valor_maior"
                            android:checked="false" />
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/multiSelect"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gill_sans_mt"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/multiselecao"
                            android:checked="false" />

                        <LinearLayout
                            android:id="@+id/layoutMultiSelect"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/gill_sans_mt"
                                android:textColor="@color/preto"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/limite_selecao"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:id="@+id/selectRemove"
                                    android:tint="@color/preto"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_action_remover"/>
                                <TextView
                                    android:id="@+id/numeroLimite"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textAlignment="center"
                                    android:textColor="@color/preto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:text="1"/>
                                <ImageButton
                                    android:id="@+id/selectAdd"
                                    android:tint="@color/preto"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_action_adicionar"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/cancelar"
                            android:background="@drawable/btn_acriligo_vermelho"
                            android:textColor="@color/acriligo_tint_vermelho"
                            android:textAllCaps="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/confirmar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/confirmar"
                            android:background="@drawable/btn_acriligo_verde"
                            android:textColor="@color/acriligo_tint_verde"
                            android:textAllCaps="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>