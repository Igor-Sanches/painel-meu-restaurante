<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AtualizarCardapioAdicionaisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWindowBackground">
            <ImageView
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:transitionName="logotipoScreen"
                android:padding="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_pizzaria" />
            <ImageButton
                android:onClick="onBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/branco"
                android:src="@drawable/ic_action_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/adicionar_item"
                    android:onClick="onAdicionarItemCardapio"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/branco"
                    android:src="@drawable/ic_action_adicionar"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/ordenar_blocos"
                    android:onClick="onOrdenarBlocos"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:layout_height="48dp"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:textColor="@color/branco"
                    android:text="@string/ordenar"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

        </RelativeLayout>
       <LinearLayout
           android:id="@+id/layout_principal"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"
           android:orientation="vertical">
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_margin="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_marginEnd="10dp"
                       android:orientation="vertical"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1">
                       <TextView
                           android:textColor="@color/preto"
                           android:fontFamily="@font/gotham"
                           android:textSize="8pt"
                           android:textStyle="bold"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/displayName"/>
                       <TextView
                           android:textSize="6pt"
                           android:textColor="@color/grey_60"
                           android:fontFamily="@font/gill_sans_mt"
                           android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/summary"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:gravity="center"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/valorText"
                           android:layout_gravity="bottom"
                           android:textAppearance="@style/TextAppearance.AppCompat.Title"
                           android:layout_width="wrap_content"
                           android:gravity="center_vertical"
                           android:layout_marginEnd="10dp"
                           android:layout_height="match_parent"
                           android:text="R$ 0,00"
                           android:singleLine="true"/>
                       <ImageButton
                           android:id="@+id/on_config_cardapio"
                           android:onClick="onConfigCardapio"
                           android:layout_width="48dp"
                           android:layout_height="48dp"
                           android:tint="@color/acriligo_tint_laranja"
                           android:src="@drawable/ic_action_settings"
                           android:background="@drawable/btn_acriligo_laranja"/>
                   </LinearLayout>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:id="@+id/lista_layout">
                   <androidx.recyclerview.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:id="@+id/mRecyclerView"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <Button
                           android:id="@+id/btn_cancelar_publicar"
                           android:onClick="onCancelarItens"
                           android:background="@drawable/btn_acriligo_vermelho_quadrado"
                           android:text="@string/cancelar"
                           android:textColor="@color/acriligo_tint_vermelho"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"/>
                       <Button
                           android:onClick="onConfirmarItens"
                           android:id="@+id/btn_confirnar_publicar"
                           android:visibility="gone"
                           android:background="@drawable/btn_acriligo_verde_quadrado"
                           android:text="@string/atualizar"
                           android:textColor="@color/acriligo_tint_verde"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"/>
                   </LinearLayout>
               </LinearLayout>

           </RelativeLayout>
       </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <app.birdsoft.painelmeurestaurante.widget.ViewLoadingDotsFade
            android:background="@color/colorWindowBackground"
            android:layout_width="50dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_wifi_error"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wifi_offline"/>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/carrinho_erro_conexao"/>

        <Button
            android:onClick="onUpdateConnection"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_style_iniciar"
            android:text="@string/tente_novamente"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/vazio"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lista_vazia"/>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gill_sans_mt"
            android:text="@string/sem_lanches_indisponivel"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_sheet"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>