<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CardapioVisualizadorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWindowBackground">
            <ImageView
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:transitionName="logotipoScreen"
                android:padding="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_pizzaria" />
            <ImageButton
                android:onClick="onBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/branco"
                android:src="@drawable/ic_action_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
          <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
              <ImageButton
                  android:id="@+id/adicionar_item"
                  android:onClick="onAdicionarItemCardapio"
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:tint="@color/branco"
                  android:src="@drawable/ic_action_adicionar"
                  android:background="?attr/selectableItemBackgroundBorderless"/>
              <Button
                    android:visibility="gone"
                    android:id="@+id/ordenar_blocos"
                    android:onClick="onOrdenarBlocos"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:layout_height="48dp"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:textColor="@color/branco"
                    android:text="@string/ordenar"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textColor="@color/preto"
                        android:fontFamily="@font/gotham"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/displayName"/>
                    <TextView
                        android:textSize="6pt"
                        android:textColor="@color/grey_60"
                        android:fontFamily="@font/gill_sans_mt"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/summary"/>
                </LinearLayout>
                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/valorText"
                    android:layout_gravity="bottom"
                    app:robotoFontFamily="roboto_mono"
                    app:robotoTextStyle="normal"
                    app:autoSizeTextType="uniform"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/lista_layout">
               <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/mRecyclerView"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_cancelar_publicar"
                        android:onClick="onCancelarItens"
                        android:background="@drawable/btn_acriligo_vermelho_quadrado"
                        android:text="@string/cancelar"
                        android:textColor="@color/acriligo_tint_vermelho"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>
                    <Button
                        android:onClick="onConfirmarItens"
                        android:id="@+id/btn_confirnar_publicar"
                        android:visibility="gone"
                        android:background="@drawable/btn_acriligo_verde_quadrado"
                        android:text="@string/confirmar"
                        android:textColor="@color/acriligo_tint_verde"
                        android:layout_width="0dp"
                        android:textAllCaps="false"
                        android:layout_height="40dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/vazio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:src="@drawable/lista_vazia"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:textAlignment="center"
                    android:fontFamily="@font/gill_sans_mt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/sem_itens"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_sheet"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>